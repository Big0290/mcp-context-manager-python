# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/mcp_memory
REDIS_URL=redis://localhost:6379

# Vector Database Configuration
VECTOR_DB_TYPE=qdrant  # Options: qdrant, chroma, faiss
QDRANT_URL=http://localhost:6333
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers  # Options: openai, sentence-transformers
OPENAI_API_KEY=your_openai_api_key_here
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Memory Configuration
MEMORY_RELEVANCY_THRESHOLD=0.7
MAX_MEMORY_CHUNK_SIZE=1000
AUTO_SUMMARIZE_THRESHOLD=50
MAX_SHORT_TERM_MEMORY=100

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
